<%=render "homes/header"%>
  <div class="mt-5 py-5">
   <div class="flex flex-col mb-8 items-center">
     <h2 class="leading-title">
        Latest Free Events
    </h2> 
   
    <%= form_tag('/free/event', method: 'get', class: 'search-form') do %>
      <input type="text" name="query"  placeholder="Search..." class="input">
      <input type="submit" value="Search", class="flex-1">
    <% end %>

    </div>

    <div class="grid-container mx-6 transition ease-in-out delay-200">
       <%@free_events.each do |event| %>
         <%=render "users/booking_type", event: event%>
       <%end%>

    </div>
    <%=render "shared/paginate", model: @free_events%>

    </div>