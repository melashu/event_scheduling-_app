<div id="<%= dom_id booking_type %>">
  <%=link_to booking_type_path(booking_type), class: "each-booking-type" do%>
    <div class="h-1 w-full bg-slate-600 absolute top-0 left-0 right-0", style="background-color: <%=booking_type.color%>"></div>
      <p>
    <h3 class="font-medium text-2xl font-serif"><strong>Name:</strong> <%= booking_type.name %></h3>
  <%if booking_type.cover_photo.attached?%>
    <%= image_tag booking_type.cover_photo, class: 'cover_image'%>
  <%end%>
   
    <p class="para-text"> <strong>Start Date:</strong> <%=booking_type.start_date%></p>
    <p class="para-text"> <strong>End Date: </strong><%=booking_type.end_date%></p>
    <p class="para-text"> <strong>Location: </strong> <%=booking_type.location%></p>

    <%if booking_type.payement_required?%>
       <div class="mt-2 pt-3 border-t-2">
        <p>
          <strong>Payement</strong>
        </p>
        <p>
          <strong>Price</strong>
          <%=number_to_currency(booking_type.price)%>
        </p>
       </div>
    <%end%>
  </p>
  <%end%>


 
</div>
