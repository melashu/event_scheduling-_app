<h2 class="title">Log in</h2>
<div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field mb-4">
    <%= f.label :email, class: label_style %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: input_style %>
  </div>

  <div class="field mb-4">
    <%= f.label :password, class: label_style %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: input_style %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: label_style %>
    </div>
  <% end %>

  <div class="actions flex items-center gap-4 my-5">
    <%= f.submit "Log in", class: button_style %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
</div>

